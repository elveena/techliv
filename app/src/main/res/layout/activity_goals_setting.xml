<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".GoalsSetting">

    <TextView
        android:id="@+id/tv_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="GOALS SETTING"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goals"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/baloo"
        android:text="Adjust your goals"
        android:textColor="@color/teal_700"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_adjust"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekbar_social"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:max="1440"
            android:progress="1" />

        <TextView

            android:id="@+id/tv_social_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 mins"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_social"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productivity: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekbar_productivity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:max="1440"
            android:progress="1" />

        <TextView
            android:id="@+id/tv_prod_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 mins"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_finance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_prod"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finance: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekbar_finance"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:max="1440"
            android:progress="1" />

        <TextView
            android:id="@+id/tv_finance_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 mins"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_entertainment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_finance"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entertainment: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekbar_entertainment"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:max="1440"
            android:progress="1" />

        <TextView
            android:id="@+id/tv_ent_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 mins"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="406dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:id="@+id/btn_date"
        android:layout_alignBottom="@+id/in_date"
        android:layout_toRightOf="@+id/in_date"
        android:layout_toEndOf="@+id/in_date" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/from_time"
        android:layout_below="@+id/in_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:id="@+id/btn_from_time"
        android:layout_below="@+id/btn_date"
        android:layout_alignLeft="@+id/btn_date"
        android:layout_alignStart="@+id/btn_date" />

    <EditText
        android:id="@+id/to_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/in_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="57dp" />

    <Button
        android:id="@+id/btn_to_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_date"
        android:layout_alignStart="@+id/btn_date"
        android:layout_alignLeft="@+id/btn_date"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="54dp"
        android:text="TO" />

    <Button
        android:id="@+id/btn_set_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_entertainment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="295dp"
        android:text="SET GOALS" />

</RelativeLayout>
